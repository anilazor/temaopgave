---
import { Image } from "astro:assets";
import MeetingImage from "@assets/images/meeting.png";
import DynamicIcon from "./helpers/DynamicIcon.astro";
const { subHeading, heading, paragraph, topLi, bottomLi } = Astro.props;
---

<section>
  <Image src={MeetingImage} alt="meeting" />
  <div class="content">
    <h4>{subHeading}</h4>
    <h2>{heading}</h2>
    <p>
      {paragraph}
    </p>
    <ul>
      <li>
        <DynamicIcon name="checkmark" />
        <p>
          {topLi}
        </p>
      </li>
      <li>
        <DynamicIcon name="checkmark" />
        <p>
          {bottomLi}
        </p>
      </li>
    </ul>
  </div>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: subgrid;
    grid-column: content;
    margin-block-start: 6rem;
    gap: var(--inline-gap-large);

    ul {
      margin-block-start: var(--block-gap-medium);
      margin-right: 8rem;

      li {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        margin-block-start: var(--block-gap-medium);

        p {
          text-box-trim: trim-both;
          text-box-edge: cap alphabetic;
        }

        .icon {
          color: var(--green);
          width: 40px;
        }
      }
    }

    img {
      grid-column-end: middle;
      border-radius: 20px;
      margin-top: 4rem;
    }

    .content {
      grid-column-start: middle;
      grid-column-end: content-end;

      h2 {
        margin-block-end: 0.9rem;
      }

      h4 {
        margin-block-end: 0.8rem;
      }
    }
  }
</style>
